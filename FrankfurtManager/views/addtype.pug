extends layout

block head

block content
  .container
    h2 添加类型
    form(role="form" action="/module/addtype" method="post" enctype="multipart/form-data")
      .form-group
        label(for="name") 类型名称
        input(type="text" class="form-control" name="name" id="name" placeholder="请输入名称")
      .form-group
        label(for="imgPath")
        input(type="file" name="imgPath" accept="image/jpg,image/jpeg,image/png")
      .form-group
        label(for="content")
        script(id="container" name="content" type="text/plain")
      .form-group
      input(type="hidden" name="typeid" value=typeid)
      button(type="submit" class="btn btn-default") 提交
  script(type="text/javascript" src="/js/ueditor/ueditor.config.js")
  script(type="text/javascript" src="/js/ueditor/ueditor.all.js")
  script(type="text/javascript")
    |var ue = UE.getEditor('container');