extends layout

block head

block content
  .container
    h1 编辑模块
    form(role="form" action="/module/modmodule" method="post")
      .form-group
        label(for="name") 模块名称
        input(type="text" class="form-control" name="name" id="name" value=data.name placeholder="请输入名称")
      .form-group
        label(for="content") 链接
        input(type="text" class="form-control" name="url" id="url" value=data.url)
      .form-group
        label(for="language") 语言
        select(class="form-control" name="language" id="language")
          if data.language==1
            option(value="1" selected) 英语
          else
            option(value="1") 英语
          if data.language==2
            option(value="2" selected) 德语
          else
            option(value="2") 德语
      input(type="hidden" name="id" value=data._id)
      p
      button(type="submit" class="btn btn-default") 提交