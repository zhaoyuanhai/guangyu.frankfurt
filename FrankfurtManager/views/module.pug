extends layout

block head
  script(src="/pagejs/module.js")

block content
  .container
    header
      h1 模块管理
    table.table
      thead
        tr
          td 名称
          td 链接
          td 语言
          td 操作
      tbody
        each data in datas
          tr
            td= data.name
            td= data.url
            td(style="width:50px")= data.language==1?'英语':'德语'
            td(style="width:100px") 
              a(href="/module/typelist?id=" + data._id) 详情 
              span |
              a(href="/module/modmodule?id=" + data._id) 编辑