extends layout

block head
  
block content
  .container
    form(role="form" action="/module/modtype" method="post" enctype="multipart/form-data")
      .form-group
        label(for="name") 类型名称
        input(type="text" class="form-control" name="name" id="name" value=data.name placeholder="请输入名称")
      .form-group
        label(for="language") 语言
        select(class="form-control" name="language" id="language")
          if data.language==1
            option(value="1" selected) 英语
          else
            option(value="1") 英语
          if data.language==2
            option(value="2" selected) 德语
          else
            option(value="2") 德语
      .form-group
        label(for="imgPath")
        input.form-control(type="file" name="imgPath" id="imgPath")
      .form-group
        label(for="content") 内容
        script(id="container" name="content" type="text/plain")
          != data.content
      input(type="hidden" name="id" value=data._id)
      input(type="hidden" name="typeId" value=data.typeId)
      p
      button(type="submit" class="btn btn-default") 提交

  script(type="text/javascript" src="/js/ueditor/ueditor.config.js")
  script(type="text/javascript" src="/js/ueditor/ueditor.all.js")
  script(type="text/javascript")
    |var ue = UE.getEditor('container');